# -- Init Section --

include system.in.init

# -- Atom Definition Section --

read_data system.data

# -- Settings Section --

include system.in.settings

# -- Run Section --


timestep        0.005
dump            1 all custom 500 traj_nvt.lammpstrj id mol type x y z ix iy iz

thermo_style    custom step temp pe etotal epair ebond eangle edihed
thermo          20000  # time interval for printing out "thermo" data
thermo_modify   norm yes

# Integrate the equations of motion:
fix fxLan     all langevin 0.5961621 0.5961621 2000.0 48279
fix fxRigid all rigid molecule

#fix fxBalance all balance 1000 xy 20 1.3

run		400000000

write_restart  system_after_nvt.rst

